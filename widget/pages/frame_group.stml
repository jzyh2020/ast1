<template>
    <view class="main">
        <view class="nav">
            <view class="menu" v-for="(item,index) in menuList">
                <view class={this.data.selectedIndex==index?'item item-selected':'item'} data-index={index} onclick={this.fnSetFrameGroupIndex}>
                    <text class={this.data.selectedIndex==index?'item-title item-title-selected':'item-title'}>{item}</text>
                </view>
            </view>
        </view>
        <frame-group id="frameGroup" preload="0" onchange={this.onchange}></frame-group>
    </view>
</template>
<script>
export default {
    name: "test",
    data() {
        return {
            menuList: ["view", "text", "image"],
            selectedIndex: 0
        };
    },
    methods: {
        apiready() {
            var frames = [];
            for (var i = 0; i < this.data.menuList.length; i++) {
                var name = this.data.menuList[i];
                frames.push({
                    name: name,
                    url: "https://m.baidu.com"
                });
            }
            var frameGroup = document.getElementById("frameGroup");
            frameGroup.load({
                frames: frames
            });
        },
        fnSetFrameGroupIndex(e) {
            var index = e.target.dataset.index;
            if (this.data.selectedIndex != index) {
                this.data.selectedIndex = index;
                var frameGroup = document.getElementById("frameGroup");
                frameGroup.setIndex({
                    index: index,
                    scroll: true
                });
            }
        },
        onchange(e) {
            var index = e.detail.index;
            if (this.data.selectedIndex != index) {
                this.data.selectedIndex = index;
            }
        }
    }
};
</script>
